@model CRUD_ASP_NET_6_V2.Models.Contatos

@{
    ViewData["Title"] = "Novo contato";
}
<h1>Novo contato</h1>
<br>

<h4>Contato</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="novo_contato">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-md-6">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Cidade" class="control-label"></label>
                <input asp-for="Cidade" class="form-control" />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Codcontato" class="control-label"></label>
                <input asp-for="Codcontato" class="form-control" />
                <span asp-validation-for="Codcontato" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group col-md-6">
                <label class="text-left ">Sexo:  </label>
                <select asp-for="Sexo" class="form-label" >
                    <option value=""></option>
                    <option value="masculino">Masculino</option>
                    <option value="feminino">Feminino</option>
                    </select>
                <span asp-validation-for="Sexo" class="text-danger"></span>
            </div>
            <br>

            <div class="form-group col-md-6 ">
                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-primary" />   
             
                    <a asp-action="Index" class="btn btn-secondary"><i class="fa fa-arrow-circle-right"></i> Voltar</a>
                </div>


            </div>

        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
